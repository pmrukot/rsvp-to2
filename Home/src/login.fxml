<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label GridPane.rowIndex="1"  GridPane.columnIndex="0" text="Login:" maxWidth="200"/>
    <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="login"/>
    <Label GridPane.rowIndex="2"  GridPane.columnIndex="0" text="Password:" maxWidth="200"/>
    <TextField GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="password"/>
    <Button GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="RIGHT" text="Login" onAction="#login"/>
</GridPane>