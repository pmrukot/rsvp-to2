<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.GridPane?>
<GridPane fx:controller="rsvp.user.controller.AdminController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label GridPane.rowIndex="0"  GridPane.columnIndex="0" text="File"/>
    <Button GridPane.rowIndex="0"  GridPane.columnIndex="1" text="Upload" onAction="#upload"/>
    <Button GridPane.rowIndex="1"  GridPane.columnIndex="0" text="Create single user" onAction="#createSingleUSer"/>
    <ComboBox GridPane.rowIndex="2"  GridPane.columnIndex="0" fx:id="userComboBox" promptText="Select user..." onShowing="#loadUsers" visibleRowCount="15"/>
    <Button GridPane.rowIndex="3"  GridPane.columnIndex="0" text="Edit selected user" onAction="#editUser"/>
    <Button GridPane.rowIndex="3"  GridPane.columnIndex="1" text="Delete selected user" onAction="#deleteUser"/>
</GridPane>