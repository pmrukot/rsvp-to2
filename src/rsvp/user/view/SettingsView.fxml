<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="rsvp.user.controller.SettingsController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label GridPane.rowIndex="0"  GridPane.columnIndex="0" text="Change password" style="-fx-font-size: 16px; -fx-font-weight: bold; "/>

    <Label GridPane.rowIndex="1"  GridPane.columnIndex="0" text="Old password:" maxWidth="200"/>
    <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="oldPassword"/>
    <Label GridPane.rowIndex="2"  GridPane.columnIndex="0" text="New password:" maxWidth="200"/>
    <TextField GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="newPassword"/>
    <Label GridPane.rowIndex="3"  GridPane.columnIndex="0" text="Repeat new password:" maxWidth="200"/>
    <TextField GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="newPassword2"/>
    <Button GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.halignment="RIGHT" text="Change" onAction="#changePassword"/>


    <Button GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.halignment="LEFT" text="Logout" onAction="#logout"/>
</GridPane>