<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="rsvp.user.controller.EditUserController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label GridPane.rowIndex="0"  GridPane.columnIndex="0" text="User data" style="-fx-font-size: 16px; -fx-font-weight: bold; "/>

    <Label GridPane.rowIndex="1"  GridPane.columnIndex="0" text="Login:" maxWidth="200"/>
    <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="login"/>
    <Label GridPane.rowIndex="2"  GridPane.columnIndex="0" text="First Name:" maxWidth="200"/>
    <TextField GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="firstName"/>
    <Label GridPane.rowIndex="3"  GridPane.columnIndex="0" text="Last Name:" maxWidth="200"/>
    <TextField GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="lastName"/>
    <Label GridPane.rowIndex="4"  GridPane.columnIndex="0" text="Password:" maxWidth="200"/>
    <TextField GridPane.rowIndex="4" GridPane.columnIndex="1" fx:id="password"/>
    <Label GridPane.rowIndex="5"  GridPane.columnIndex="0" text="Admin:" maxWidth="200"/>
    <CheckBox GridPane.rowIndex="5" GridPane.columnIndex="1" fx:id="admin"/>
    <Button GridPane.rowIndex="7" GridPane.columnIndex="1" GridPane.halignment="RIGHT" fx:id="saveEditedUser" text="Save" onAction="#saveEditedUser"/>
</GridPane>
