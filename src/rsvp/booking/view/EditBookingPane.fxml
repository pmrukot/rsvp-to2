<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rsvp.booking.controller.EditController" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="300.0" BorderPane.alignment="CENTER">
    <opaqueInsets>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </opaqueInsets>

    <children>
        <DatePicker fx:id="reservationDatePicker">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </DatePicker>

        <Label text="User" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets bottom="0.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </Label>

        <TextField fx:id="userId" GridPane.columnIndex="1" maxWidth="200">
            <GridPane.margin>
                <Insets bottom="0.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </TextField>

        <Label text="Room" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets bottom="0.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </Label>

        <TextField fx:id="roomId" GridPane.columnIndex="2" maxWidth="200">
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </TextField>

        <Button fx:id="saveButton" onAction="#save" text="Create">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>